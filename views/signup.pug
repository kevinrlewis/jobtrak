extends layout

block content
  form(method='POST')
    div.container
        div.row
          h1(class='col-xs-offset-1 col-xs-8 col-sm-7') sign-up
          a(
            class='btn btn-default col-xs-3 col-sm-offset-2 col-sm-2'
            href='/login'
          ) back
        hr
        if message.length > 0
          div.row(class='alert alert-danger')=message
        div.row
          label(for="username" class='col-sm-offset-3 col-xs-6 col-sm-3') enter username:
          input(
            type="plaintext"
            placeholder="username"
            class='text-field col-xs-6 col-sm-4 col-md-4 col-lg-4'
            name="username"
          )
        div.row
          label(for="password1" class='col-sm-offset-3 col-xs-6 col-sm-3') enter password:
          input(
            type="password"
            placeholder="password"
            class='text-field col-xs-6 col-sm-4 col-md-4 col-lg-4'
            name="password"
          )
        div.row
          label(for="password2" class='col-sm-offset-3 col-xs-6 col-sm-3') confirm password:
          input(
            type="password"
            placeholder="password"
            class='text-field col-xs-6 col-sm-4 col-md-4 col-lg-4'
          )
        div.row(style='margin-top:10px;')
          input(
            type='submit'
            class='btn btn-default col-xs-offset-5 col-sm-offset-6'
            name='newsignup'
            formaction='/signup'
            value='submit'
          )
