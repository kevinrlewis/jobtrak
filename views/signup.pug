extends layout

block content
  form(method='POST')
    div.container
        div.row
          h1(class='col-xs-offset-1 col-sm-offset-4') JobTrakr Sign-up
        hr
        if message.length > 0
          div.row(class='alert alert-danger')=message
        div.row
          label(for="username" class='col-sm-offset-3 col-xs-6 col-sm-3') Enter username:
          input(
            type="plaintext"
            placeholder="Username"
            class='col-xs-6 col-sm-4 col-md-4 col-lg-4'
            name="username"
          )
        div.row
          label(for="password1" class='col-sm-offset-3 col-xs-6 col-sm-3') Enter password:
          input(
            type="password"
            placeholder="Password"
            class='col-xs-6 col-sm-4 col-md-4 col-lg-4'
            name="password"
          )
        div.row
          label(for="password2" class='col-sm-offset-3 col-xs-6 col-sm-3') Re-enter password:
          input(
            type="password"
            placeholder="Re-enter password"
            class='col-xs-6 col-sm-4 col-md-4 col-lg-4'
          )
        div.row(style='margin-top:10px;')
          input(
            type='submit'
            class='btn btn-default col-xs-offset-5 col-sm-offset-6'
            name='newsignup'
            formaction='/signup'
          )
