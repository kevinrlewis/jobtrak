extends layout

block content
  form(method='POST')
    div.container-fluid
      a(href="/" style="color: var(--txt-color)!important; text-decoration: unset;")    
        div.row
          h1.mx-auto#title(class='col-xs-12' style="text-align: center;")=title
            sup(style="font-size: 20%; top: -3.15em;") beta
      hr
      if message.length > 0
        div.row.justify-content-center
          p.col-xs-12.col-sm-7.alert.alert-danger=message
      div.row.justify-content-center
        input.form-control(
          type="plaintext"
          placeholder="email"
          name='email'
          class='text-field col-xs-12 col-sm-7'
        )
      div.row.justify-content-center
        input.form-control(
          type="password"
          placeholder="password"
          name='password'
          class='text-field col-xs-12 col-sm-7'
        )
      div.row.justify-content-center(style='margin-top:10px;')
        input(
          class='btn btn-default col-xs-12 col-sm-7'
          type='submit'
          value='sign in'
          name='signinButton'
          formaction='/login'
          id='sign-in'
        )
      div.row.justify-content-center
        input(
          class='btn btn-default col-xs-12 col-sm-7'
          type='submit'
          value='sign up'
          name='signupButton'
          formaction='/signup'
        )
