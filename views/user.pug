extends layout

block content
  div.container#header(style='margin-bottom:50px;')
    div.row
      h1(class='col-xs-8 col-sm-6' style='margin-top:0px;')='hello '+user.local.username
      form(method='GET')
        input(
          class='btn btn-danger col-xs-offset-1 col-sm-offset-4 col-md-offset-5 col-xs-3 col-sm-2 col-md-1'
          value='logout'
          type='submit'
          formaction='/logout'
        )
  div.container
    div.row
      h3(class='col-xs-4 col-sm-4 col-md-4' style='margin-top:2px;') jobs applied:
      button(
        class='btn btn-default col-xs-offset-4 col-xs-4 col-sm-4 col-md-4'
        data-toggle='collapse'
        data-target='#addjobdiv'
      ) add a job
      div.row.collapse#addjobdiv(
        aria-expanded='false'
        )
        form(method='POST')
          input(
            class='col-xs-8'
            type="plaintext"
            placeholder="Job link"
            name='joblink'
          )
          input(
            class='btn btn-success col-xs-offset-2 col-xs-2'
            style='padding:2px;'
            value='add'
            type='submit'
            formaction='/profile'
          )
    if applied == undefined
      div.row
        label no jobs
    else
      each item in applied
        div.row
          label=item.website
